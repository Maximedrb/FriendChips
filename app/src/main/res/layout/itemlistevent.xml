<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/itemAvatarEvent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/black"
        tools:background="#AAA" />

    <TextView
        android:id="@+id/itemNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/itemAvatarEvent"
        android:layout_alignTop="@+id/itemAvatarEvent"
        android:textStyle="bold"
        tools:text="Pseudo" />

    <TextView android:id="@+id/itemPeriode"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:layout_alignLeft="@+id/itemNom"
    android:layout_below="@+id/itemNom"
    tools:text="Texte de mon tweet" />


</RelativeLayout>