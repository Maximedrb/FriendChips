<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.friendschips.fragment.GestionFragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_screen4">

    <EditText
        android:id="@+id/etRecherche"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:background="@drawable/etrecherche"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="128dp"
        android:drawableLeft="@drawable/search"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/listItemFriend"
        android:layout_alignParentStart="@+id/itemAvatarEvent"
        android:layout_below="@+id/etRecherche" />

</RelativeLayout>